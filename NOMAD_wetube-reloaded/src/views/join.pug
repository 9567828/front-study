extends base

block content
  form(method="POST")
    input(name="name" type="text" placeholder="이름입력" required)
    input(name="email" type="text" placeholder="이메일입력" required)
    input(name="username" type="text" placeholder="별명입력" required)
    input(name="password" type="password" placeholder="비번입력" required)
    input(name="location" type="text" placeholder="주소입력" required)
    input(type="submit", value="join")