extends base

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="name" type="text" placeholder="이름입력" required)
    input(name="email" type="text" placeholder="이메일입력" required)
    input(name="username" type="text" placeholder="별명입력" required)
    input(name="password1" type="password" placeholder="비번입력" required)
    input(name="password2" type="password" placeholder="비번확인" required)
    input(name="location" type="text" placeholder="주소입력" required)
    input(type="submit", value="join")
  hr
  div
    span 이미 계정이 있나요? 
    a(href="/login") 로그인하러가기 &rarr; 
